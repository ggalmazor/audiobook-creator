{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:allow-write-text-file",
    "fs:allow-temp-write",
    "shell:allow-open",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "ffmpeg-command",
          "cmd": "ffmpeg",
          "args": true,
          "sidecar": false
        },
        {
          "name": "ffprobe-command",
          "cmd": "ffprobe", 
          "args": true,
          "sidecar": false
        }
      ]
    }
  ]
}
